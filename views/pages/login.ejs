<body data-gr-c-s-loaded="true" class="bg-light pt-5">
    <div class="container pt-5">
        <div class="col-md-6 offset-xl-3 mt-5">
            <div class="card">
                <div class="card-body">
                    <div class="form-group text-center mt-5">
                        <h3 class="font-weight-bold text-dark">Log in and get to start </h3>
                        <label for="" class="text-secondary">Welcome to our Meta Media</label>
                        <hr>
                    </div>

                    <form action="/user/login" method="post" class="form-validation pl-lg-5 pr-lg-5">
                        <div class="input-group mt-5">
                            <div class="input-group-prepend">
                                <span class="input-group-text" id="basic-addon1">
                                    <i class="material-icons text-primary">
                                        email &nbsp;
                                    </i>
                                </span>
                            </div>
                            <input id="email" name="email" type="email" class="form-control" placeholder=" &nbsp;User email or User name" autocomplete="on" autofocus required/>
                        </div>

                        <div class="input-group mt-4">
                            <div class="input-group-prepend">
                                <span class="input-group-text" id="basic-addon1">
                                    <i class="material-icons text-primary">
                                        lock &nbsp;
                                    </i>
                                </span>
                            </div>
                            <input id="password" name="password" type="password" class="form-control" placeholder=" &nbsp;Password" autocomplete="on" required/>
                        </div>

                        <div class="form-group text-center mt-4">
                            <button type="submit" class="ml-auto p-2 pl-5 pr-5 text-weight-bold btn btn-raised btn-success">
                                Sign in
                            </button>
                        </div>
                    </form>
                </div>
                <div class="card-footer bg-light">
                    <div class="text-center mt-3 mb-3 text-secondary">
                        <h6 class="mt-3">-------- &nbsp;New to Meta Media?&nbsp; --------</h6>
                        <a href="/signup" class="mt-3 bg-white ml-auto p-2 pl-5 pr-5 text-success text-weight-bold btn btn-raised">
                            Sign up
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Begin import jabascript libs -->
    <% include ../partials/scripts %>
    <!-- End import jabascript libs -->

    <script src="app/js/login.js"></script>
</body>