<body data-gr-c-s-loaded="true">
    <div class="container-scroller">
        <!-- partial:../../partials/_navbar.html -->
        <% include ../../partials/_navbar %>
        <!-- partial -->
        
        <div class="container-fluid page-body-wrapper">
            <!-- partial:../../partials/_sidebar.html -->
            <% include ../../partials/_sidebar %>

            <div class="main-panel">
                <div class="content-wrapper">
                    <% console.log(data) %>
                    <div class="card p-1">
                        <div class="card-body p-0">
                            <table id="example" class="table table-hover">
                                <thead>
                                    <tr class="text-center">
                                        <th class="font-weight-bolder">First name</th>
                                        <th class="font-weight-bolder">Last name</th>
                                        <th class="font-weight-bolder">User name</th>
                                        <th class="font-weight-bolder">Email</th>
                                        <th class="font-weight-bolder">Role</th>
                                        <th class="font-weight-bolder">Date</th>
                                        <th class="font-weight-bolder">Action</th>
                                    </tr>
                                </thead>
                                <style>
                                    .user-modal-dialog {
                                        max-width: 450px;
                                        margin: 30px auto;                        
                                    }
                                </style>
                                <tbody>
                                <% for(var obj of data) { %>
                                    <tr class="text-center" style="cursor: pointer">
                                        <td scope="row">
                                            <%= obj.first_name %>
                                        </td>
                                        <td>
                                            <%= obj.last_name %>
                                        </td>
                                        <td>
                                            <%= obj.user_name %>
                                        </td>
                                        <td>
                                            <%= obj.email %>
                                        </td>
                                        <td>
                                            <%= obj.name %>
                                        </td>
                                        <td>
                                            <%= 30 - Math.round(((new Date()).getTime() - (new Date(obj.createdAt)).getTime())/(1000*60*60*24)) %>
                                        </td>
                                        <td>
                                            <div class="button-group">
                                                <button type="button"
                                                    data-toggle="modal" 
                                                    data-target="#model<%= obj.id %>"
                                                    onclick="modalUser(<%= obj.id %>)"
                                                    class="btn btn-outline-primary pl-2 p-1 m-0 btn-rounded">
                                                    <i class="mdi mdi-content-save-edit-outline"></i>
                                                </button>

                                                <button type="button"
                                                    onclick="deleteUser(<%= obj.id %>)" 
                                                    class="btn btn-outline-danger pl-2 p-1 m-0 btn-rounded">
                                                    <i class="mdi mdi-delete-outline"></i>
                                                </button>
                                            </div>
                                        </td>
                                    </tr>
                                    
                                    <!-- Modal -->
                                    <div class="modal  fade" id="model<%= obj.id %>" tabindex="-1" role="dialog" aria-labelledby="modelTitleId" aria-hidden="true">
                                        <div class="modal-dialog user-modal-dialog" role="document">
                                            <div class="modal-content">
                                                <div class="modal-body">
                                                    <h2 class="font-weight-bold">
                                                        <strong>
                                                            Edit user
                                                        </strong>
                                                    </h2>
                                                    <div class="form-group">
                                                        <label for="">First name</label>
                                                        <input type="text" 
                                                            name="" id="first-name-<%= obj.id %>" 
                                                            class="form-control" placeholder="" aria-describedby="helpId">
                                                        <small id="helpId" class="text-muted" hidden>Help text</small>
                                                    </div>

                                                    <div class="form-group">
                                                        <label for="">Last name: </label>
                                                        <input type="text" 
                                                            name="" id="last-name-<%= obj.id %>" 
                                                            class="form-control" placeholder="" aria-describedby="helpId">
                                                        <small id="helpId" class="text-muted" hidden>Help text</small>
                                                    </div>

                                                    <div class="form-group">
                                                        <label for="">User name: </label>
                                                        <input type="text" 
                                                            name="" id="user-name-<%= obj.id %>" 
                                                            class="form-control" placeholder="" aria-describedby="helpId">
                                                        <small id="helpId" class="text-muted" hidden>Help text</small>
                                                    </div>

                                                    <div class="form-group">
                                                        <label for="">Email: </label>
                                                        <input type="text" 
                                                            name="" id="email-<%= obj.id %>" 
                                                            class="form-control" placeholder="" aria-describedby="helpId">
                                                        <small id="helpId" class="text-muted" hidden>Help text</small>
                                                    </div>
                                                    
                                                    <div class="form-group">
                                                        <label for="">Role</label>
                                                        <select class="custom-select custom-select-sm" name="" id="choose-role-<%= obj.id %>">
                                                            <option selected>Select one</option>
                                                            <option value="1"> Tier 1 </option>
                                                            <option value="2"> Tier 2 </option>
                                                            <option value="3"> Tier 3 </option>
                                                            <option value="4"> Tier 4 </option>
                                                            <option value="5"> Admin </option>
                                                        </select>
                                                    </div>
                                                    <div class="button-group text-right">
                                                        <button type="button"
                                                            onclick="saveUser(<%= obj.id %>)" 
                                                            class="btn btn-primary btn-default">
                                                            <i class="fa fa-edit" aria-hidden="true"></i>
                                                            Edit User
                                                        </button>
                                                        <button class="btn btn-danger btn-default" data-dismiss="modal">
                                                            <i class="fa fa-times" aria-hidden="true"></i>
                                                            Close
                                                        </button>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                <% } %>
                                </tbody>

                                <tfoot>
                                    <tr class="text-center">
                                        <th class="font-weight-bolder">First name</th>
                                        <th class="font-weight-bolder">Last name</th>
                                        <th class="font-weight-bolder">User name</th>
                                        <th class="font-weight-bolder">Email</th>
                                        <th class="font-weight-bolder">Role</th>
                                        <th class="font-weight-bolder">Date</th>
                                        <th class="font-weight-bolder">Action</th>
                                    </tr>
                                </tfoot>
                            </table>
                        </div>
                    </div>
                </div>
                
                <!-- Modal -->
                <div class="modal fade" id="create-new-user" tabindex="-1" role="dialog" aria-labelledby="modelTitleId" aria-hidden="true">
                    <div class="modal-dialog user-modal-dialog" role="document">
                        <div class="modal-content">
                            <div class="modal-body">
                                <form action="" id="create-new-user-form" class="validation-required">
                                    <h2 class="font-weight-bold">
                                        <strong>
                                            Create new user
                                        </strong>
                                    </h2>
                                    <div class="form-group">
                                        <label for="">First name</label>
                                        <input type="text" 
                                            name="" id="new-first-name" 
                                            class="form-control" placeholder="" 
                                            aria-describedby="helpId" required>
                                        <small id="helpId" class="text-muted" hidden>Help text</small>
                                    </div>
    
                                    <div class="form-group">
                                        <label for="">Last name: </label>
                                        <input type="text" 
                                            name="" id="new-last-name" 
                                            class="form-control" placeholder="" 
                                            aria-describedby="helpId" required>
                                        <small id="helpId" class="text-muted" hidden>Help text</small>
                                    </div>
    
                                    <div class="form-group">
                                        <label for="">User name: </label>
                                        <input type="text" 
                                            name="" id="new-user-name" 
                                            class="form-control" placeholder="" 
                                            aria-describedby="helpId" required>
                                        <small id="helpId" class="text-muted" hidden>Help text</small>
                                    </div>
    
                                    <div class="form-group">
                                        <label for="">Email: </label>
                                        <input type="email" 
                                            name="" id="new-email" 
                                            class="form-control" placeholder="" 
                                            aria-describedby="helpId" required>
                                        <small id="helpId" class="text-muted" hidden>Help text</small>
                                    </div>

                                    <div class="form-group">
                                        <label for="">Password: </label>
                                        <input type="text" 
                                            name="" id="new-password" 
                                            class="form-control" placeholder="" 
                                            aria-describedby="helpId" required>
                                        <small id="helpId" class="text-muted" hidden>Help text</small>
                                    </div>
                                    
                                    <div class="form-group">
                                        <label for="">Role</label>
                                        <select class="custom-select custom-select-sm" name="" id="new-choose-role" required>
                                            <option value="" selected>Select one</option>
                                            <option value="1"> Tier 1 </option>
                                            <option value="2"> Tier 2 </option>
                                            <option value="3"> Tier 3 </option>
                                            <option value="4"> Tier 4 </option>
                                            <option value="5"> Admin </option>
                                        </select>
                                    </div>
                                    <div class="button-group text-right">
                                        <button type="submit"
                                            class="btn btn-primary btn-default">
                                            <i class="fa fa-plus" aria-hidden="true"></i>
                                            Crete New User
                                        </button>
                                        <button class="btn btn-danger btn-default" data-dismiss="modal">
                                            <i class="fa fa-times" aria-hidden="true"></i>
                                            Close
                                        </button>
                                    </div>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>

            <!-- partial:../../partials/_footer.html -->
            <% include ../../partials/_footer %>
            <!-- partial -->
            </div>
        <!-- main-panel ends -->
        </div>
        <!-- page-body-wrapper ends -->
    </div>
    <!-- container-scroller -->

    <% include ../../partials/_scripts %>

    <script src="app/js/admin/user.js"></script>
</body>


